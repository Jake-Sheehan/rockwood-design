---
interface Props {
    imageUrl: string;
}

const { imageUrl } = Astro.props;
---

<section>
    <div class="hero gradient-overlay">
        <img src={imageUrl} alt={`Hero image`} />
    </div>
</section>

<style>
    .hero {
        position: relative;
        width: 100%;
        block-size: max(60vh, 400px);
    }

    .hero img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1;
    }
</style>
