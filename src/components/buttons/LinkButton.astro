---
interface Props {
    href: string;
}

const { href } = Astro.props;
---

<a href={href}><slot /></a>

<style>
    a {
        background: transparent;
        padding: 0.75rem 1rem;
        outline: none;
        border: 1px solid var(--color-text-primary);
        transition: transform 0.3s ease;
        font-weight: bold;
    }

    a:hover,
    a:focus-visible {
        color: var(--color-text-primary) !important;
        transform: scale(1.05);
    }
</style>
