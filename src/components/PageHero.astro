---
interface Props {
    title: string;
    imageUrl: string;
}

const { title, imageUrl } = Astro.props;
---

<section class="hero-section">
    <div class="hero gradient-overlay">
        <img src={imageUrl} alt={`Hero image for ${title}`} />
    </div>
    <div class="overlay">
        <h2>{title}</h2>
        <slot />
    </div>
</section>

<style>
    section {
        width: 100%;
        position: relative;
    }

    .hero {
        width: 100%;
        height: 60svh;
        z-index: 1;
    }

    .hero img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1;
    }

    .overlay {
        position: relative;
        text-align: center;
        background-color: var(--color-surface-card);
        z-index: 100;
        padding: 1rem;
        border: 1px solid var(--color-border);
        width: 95%;
        margin: 0 auto;
        margin-top: -100px;
        border-radius: var(--rounded);

        @media (min-width: 1200px) {
            width: 50%;
        }
    }
</style>
