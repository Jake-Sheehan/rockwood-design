---
interface Props {
    title: string;
    imageUrl: string;
}

const { title, imageUrl } = Astro.props;
---

<section>
    <div class="hero gradient-overlay">
        <img src={imageUrl} alt={`Hero image for ${title}`} />
    </div>
    <div class="overlay">
        <h2>{title}</h2>
        <slot />
    </div>
</section>

<style>
    .hero {
        position: relative;
        width: 100%;
        height: 50dvh;
    }

    .hero img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1;
    }

    .overlay {
        position: relative;
        transform: translateY(-50%);
        text-align: center;
        background-color: var(--color-surface-card);
        z-index: 100;
        padding: 1rem;
        border: 2px solid var(--color-border);
        width: 90%;
        margin: 0 auto;
        border-radius: var(--rounded);

        @media (min-width: 1200px) {
            width: 50%;
        }
    }
</style>
