---
import XLogo from '../assets/icons/x-logo.svg';
import EmailLogo from '../assets/icons/email.svg';
import InstagramLogo from '../assets/icons/instagram.svg';

interface Props {
    imageUrl: string;
    name: string;
}

const { imageUrl, name } = Astro.props;
---

<div class="person-image">
    <div class="socials">
        <div class="icon">
            <a href="/"><EmailLogo /></a>
        </div>
        <div class="icon">
            <a href="/"><XLogo /></a>
        </div>
        <div class="icon">
            <a href="/"><InstagramLogo /></a>
        </div>
    </div>
    <div class="image-container">
        <img src={imageUrl} alt={name} />
    </div>
</div>

<style>
    .person-image {
        --radius-var: var(--rounded-lg);
        display: flex;
        flex-direction: row;
        border-radius: var(--rounded);
    }

    .socials {
        flex: 0 0 auto;
        background-color: var(--color-surface-accent);

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        padding: 10px;
        border-top-left-radius: var(--radius-var);
        border-bottom-left-radius: var(--radius-var);

        .icon {
            width: 24px;
            height: 24px;
        }
    }

    .image-container {
        flex: 1 1 auto;
        border-top-right-radius: var(--radius-var);
        border-bottom-right-radius: var(--radius-var);

        img {
            object-fit: cover;
            border-top-right-radius: var(--radius-var);
            border-bottom-right-radius: var(--radius-var);
            aspect-ratio: 4 / 3;

            @media (min-width: 768px) {
                width: 300px;
            }
        }
    }
</style>
